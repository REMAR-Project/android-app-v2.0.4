<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/toolbar_image_padding" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/caldroid_cell_height"
        android:layout_gravity="center" >

        <View
            android:id="@+id/newMoon"
            android:layout_width="@dimen/calendar_cell"
            android:layout_height="@dimen/calendar_cell"
            android:background="@drawable/ic_moon_new"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/calendar_cell_margin"
            android:layout_marginRight="@dimen/calendar_cell_margin" />

        <View
            android:id="@+id/fullMoon"
            android:layout_width="@dimen/calendar_cell"
            android:layout_height="@dimen/calendar_cell"
            android:background="@drawable/ic_moon_full"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/calendar_cell_margin"
            android:layout_marginRight="@dimen/calendar_cell_margin" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/caldroid_cell_text"/>

    </LinearLayout>

</LinearLayout>